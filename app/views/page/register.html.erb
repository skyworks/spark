<div class="vpad10">            
  <span class="bf"><%=t 'Register' %></span>
</div>

<form method="POST">           
  <div class="vpad">              
    <input name="nickname" type="text" class="form-control" placeholder="<%=t 'Nickname' %>">
  </div>
  <div class="vpad">           
    <input name="email" type="text" class="form-control" placeholder="<%=t 'Email' %>">
  </div>
