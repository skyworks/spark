<div class="vpad10">           
  <span class="bf"><%=t 'Setting' %></span>
</div> 

<form method="POST">           
  <div class="vpad">              
    <input name="nickname" type="text" class="form-control" value="<%= @current_user.nickname %>">
  </div>
  <div class="vpad">              
    <span><%= @current_user.email %></span>
  </div>
  <div class="vpad">           
    <input type="submit" value="<%=t 'Save' %>" />
  </div>
</form>                        

<div class="vpad10">
  <form method="POST">
    <div class="vpad">              
      <input name="old_password" type="password" class="form-control" placeholder="<%=t 'old_password' %>">
    </div>
    <div class="vpad">              
      <input name="new_password" type="password" class="form-control" placeholder="<%=t 'new_password' %>">
    </div>
    <div class="vpad">              
      <input name="confirm_password" type="password" class="form-control" placeholder="<%=t 'confirm_password' %>">
    </div>
    <div class="vpad">
      <input type="submit" value="<%=t 'Save' %>" />
    </div>
  </form>
</div>                         


